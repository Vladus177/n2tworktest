<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ru.vladus177.n3tworktest.ItemOneFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/item_1"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/et1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1_1"
            android:layout_marginTop="10dp"
            android:digits="0123456789 "
            android:hint="@string/task1_hint1"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et1_1"
            android:layout_marginTop="10dp"
            android:digits="0123456789 "
            android:hint="@string/task1_hint2"
            android:inputType="phone" />

        <TextView
            android:id="@+id/tv1_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1_run_test"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv2_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn1_run_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et1_2"
            android:layout_marginTop="10dp"
            android:text="Run test" />

        <LinearLayout
            android:id="@+id/bottombar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tv2_example"
            android:orientation="vertical">

        </LinearLayout>

    </RelativeLayout>


</ScrollView>